<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   	android:background="@drawable/gradient_background"
    >
		<ImageView
   		android:id="@+id/stripey"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:src="@drawable/stripe_tile"
	    android:background="@drawable/stripe_tile"
		android:layout_below="@id/wlll" />

<ScrollView
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="4dip"
    >
    
    <TextView  
	    android:id="@+id/carrier"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:text="Post an activity!"
	    android:textColor="#333"
		android:textStyle="bold"
	    android:padding="3dip"
	    android:shadowColor="#fff"
		android:shadowRadius="1"
		android:shadowDy="-1"
		android:paddingTop="24dip"
    />
    
    <TextView  
	    android:id="@+id/num_desc"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:text="What do you want to do?"
	    android:textColor="#333"
	    android:padding="3dip"
	    android:shadowColor="#fff"
		android:shadowRadius="1"
		android:shadowDy="-1"
    />
    
   <EditText
        android:id="@+id/activity"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:hint="ex: drink, soccer, cuddle"
   		android:minLines="1"
    ></EditText>
    
	<TextView  
	    android:id="@+id/num_desc"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:text="\nDescribe what you want to do in a bit more detail!"
	    android:textColor="#333"
	    android:padding="3dip"
	    android:shadowColor="#fff"
		android:shadowRadius="1"
		android:shadowDy="-1"
    />
    
   <EditText
        android:id="@+id/desc"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:hint="Gin and tonics at Charlie's Kitchen?"
   		android:minLines="3"
   		android:maxLength="140"
    ></EditText>
    
    <Button
    	android:id="@+id/post_button"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="Post!"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:padding="8dip"
		android:paddingTop="24dip"
    ></Button>
    <LinearLayout     
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:padding="4dip"
	    android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_gravity="center"
    >
    
    <ProgressBar
    	android:id="@+id/progressbar"
    	android:padding="6dip"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_gravity="center"
        style="@android:style/Widget.ProgressBar.Small"
        android:visibility="gone"
   	></ProgressBar>
    <TextView  
	    android:id="@+id/loadingtext"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="12dip"
	    android:text="posting.."
	    android:textColor="#000000"
	    android:padding="5dip"
        android:gravity="center"
        android:visibility="gone"
    	
    />
    </LinearLayout>
</LinearLayout>
</ScrollView>

</LinearLayout>
